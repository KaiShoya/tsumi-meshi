{
  "name": "tsumi-meshi",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "bootstrap": "pnpm -w -r install",
    "typecheck": "pnpm --filter @tsumi-meshi/nuxt typecheck",
    "lint": "pnpm --filter @tsumi-meshi/nuxt run lint",
    "test": "pnpm --filter @tsumi-meshi/nuxt run test",
    "build": "pnpm -w -r run build",
    "dev:nuxt": "pnpm --filter @tsumi-meshi/nuxt dev",
    "dev:workers": "pnpm --filter @tsumi-meshi/workers dev"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@nuxt/eslint": "^1.10.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/test-utils": "^2.4.6",
    "axe-core": "^4.11.0",
    "chart.js": "^4.5.1",
    "eslint": "^9.39.1",
    "hono": "^4.11.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "miniflare": "^4.20251210.0",
    "pinia": "^3.0.4",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.3.0",
    "vitest": "^4.0.15",
    "vue-chartjs": "^5.3.3",
    "vue-i18n": "^11.2.2",
    "vue-tsc": "^3.1.5",
    "wrangler": "^4.54.0"
  },
  "lint-staged": {
    "*.{ts,vue,js,jsx,tsx}": [
      "pnpm lint --fix",
      "git add"
    ],
    "*.{css,scss,md}": [
      "pnpm lint --fix",
      "git add"
    ]
  },
  "packageManager": "pnpm@10.23.0"
}
